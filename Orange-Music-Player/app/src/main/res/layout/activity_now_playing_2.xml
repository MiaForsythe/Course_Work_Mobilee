<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/now_playing_drawer_frame_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/nowPlayingRootContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NowPlayingActivity2">

        <com.tochycomputerservices.orangeplayer.vx.VelocityViewPager.VelocityViewPager
            android:id="@+id/nowPlayingPlaylistPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/seekbarIndicatorParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/now_playing_controls_header_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="60dp"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="40dp">

            <RelativeLayout
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/seekbarIndicatorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="00:00:00"
                    android:textColor="#000000"
                    android:textSize="36sp" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/now_playing_controls_header_parent"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="150dp"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <SeekBar
                    android:id="@+id/nowPlayingSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="52dp"
                    android:background="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="5dp"

                    android:indeterminate="false"
                    android:paddingBottom="0dp"
                    android:paddingTop="2dp"
                    android:progress="0"
                    android:thumb="@drawable/transparent_drawable"
                    android:thumbOffset="100000dp"
                    android:thumbTint="@null" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nowPlayingSeekBar"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp">

                    <ImageView
                        android:id="@+id/shuffleButton"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:scaleType="centerInside"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/sufflebtn" />

                    <ImageView
                        android:id="@+id/previousButton"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_round_skip_previous_24" />


                    <RelativeLayout
                        android:id="@+id/playPauseButtonBackground"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@drawable/drawable_circle">

                        <ImageView
                            android:id="@+id/playPauseButton"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:scaleX="1.2"
                            android:scaleY="1.2"
                            android:visibility="visible"
                            app:srcCompat="@drawable/pause" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/nextButton"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_round_skip_next_24" />

                    <ImageView
                        android:id="@+id/repeatButton"

                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="?android:selectableItemBackground"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:scaleType="centerInside"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/repeatbtn" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/queue_fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"></RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/id_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:elevation="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </com.google.android.material.appbar.AppBarLayout>

</RelativeLayout>